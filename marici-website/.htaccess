# Standard .htaccess for cPanel Node.js Deployment
# This ensures that Apache routes requests to Phusion Passenger (the Node.js runner)

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect to HTTPS (uncomment if needed)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Pass all requests to the Node.js app
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L]
</IfModule>

# Handle Passenger settings (if applicable)
PassengerEnabled On
PassengerAppType node
PassengerStartupFile server.js
